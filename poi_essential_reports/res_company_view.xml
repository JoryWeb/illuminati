<openerp>
    <data>
        <record id="view_company_tz_form" model="ir.ui.view">
            <field name="name">res.company.tz.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Report Configuration']/group[@string='Configuration']" position="before">
                    <group>
                        <field name="tz"/>
                        <field name="tz_offset"/>
                    </group>

                </xpath>
            </field>
        </record>
    </data>
</openerp>