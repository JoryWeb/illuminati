<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequences for Maintenance orders -->       
        <record id="sequence_workshop_order" model="ir.sequence">
            <field name="name">Maintenance order</field>
            <field name="code">workshop.order</field>
            <field name="prefix">OT/</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Sequences for Work orders -->       
        <record id="sequence_workshop_workorder" model="ir.sequence">
            <field name="name">Work order</field>
            <field name="code">workshop.workorder</field>
            <field name="prefix">WO</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Sequences for Maintenance request -->       
        <record id="sequence_workshop_request" model="ir.sequence">
            <field name="name">Maintenance request</field>
            <field name="code">workshop.request</field>
            <field name="prefix">RM</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
    </data>
</odoo>
