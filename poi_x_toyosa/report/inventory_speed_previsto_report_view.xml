<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_inventory_speed_previsto_report_pivot">
            <field name="name">inventory.speed.previsto.report.pivot</field>
            <field name="model">inventory.speed.previsto.report</field>
            <field name="arch" type="xml">
                <pivot string="Cuadro estadistico" disable_linking="True">
                    <field name="location_id" type="col"/>
                    <field name="total" type="measure"/>
                    <field name="previsto" type="measure"/>
                </pivot>
            </field>
        </record>
        <record model="ir.ui.view" id="view_inventory_speed_previsto_report_graph">
            <field name="name">inventory.speed.previsto.report.graph</field>
            <field name="model">inventory.speed.previsto.report</field>
            <field name="arch" type="xml">
                <graph string="Cuadro estadistico Inventarios">
                    <field name="location_id" type="row"/>
                    <field name="total" type="measure"/>
                </graph>
            </field>
        </record>
        

        <record id="view_inventory_speed_previsto_report_search" model="ir.ui.view">
            <field name="name">inventory.speed.previsto.report.search</field>
            <field name="model">inventory.speed.previsto.report</field>
            <field name="arch" type="xml">
                <search string="Purchase Orders">
                    <field name="categ_id"/>
                    <field name="reservation_id"/>
                    <field name="product_uom_id"/>
                    <field name="product_id"/>
                    <field name="lot_id"/>
                    <group expand='0' string='Filters'>
                        <filter name='internal_loc' string="Ubicaciones Internas" domain="[('usage','=', 'internal')]"/>
                        <filter name='transit_loc' string="Ubicaciones Transito" domain="[('usage' ,'=', 'transit')]"/>
                        <separator/>
                        <filter name="negative" string="Negativos" domain="[('qty', '&lt;', 0.0)]"/>
                        <filter name="positive" string="Positivos" domain="[('qty', '&gt;', 0.0)]"/>
                    </group>
                    <group expand="1" string="Group By">
                        <filter string="Categoría" name="group_categoria" context="{'group_by':'categ_id'}"/>
                        <filter string="Producto" name="group_product_id" context="{'group_by':'product_id'}"/>
                        <filter string="Ubicación" name="group_location_id" context="{'group_by':'location_id'}"/>
                        <filter string="Lote" name="group_lot_id" context="{'group_by':'lot_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="view_inventory_speed_previsto_report_tree">
            <field name="name">inventory.speed.previsto.report.tree</field>
            <field name="model">inventory.speed.previsto.report</field>
            <field name="arch" type="xml">
                <tree string="Inventario de Chasis">
                    <field name="usage" invisible="1"/>
                    <field name="categ_id"/>
                    <field name="product_id"/>
                    <field name="reservation_id"/>
                    <field name="lot_id"/>
                    <field name="location_id"/>
                    <field name="total" sum="Total Cantidad"/>
                    <field name="previsto" sum="Total Cantidad"/>
                    <field name="product_uom_id"/>
                </tree>
            </field>
        </record>

        <record id="action_inventory_speed_previsto_report_all" model="ir.actions.act_window">
            <field name="name">Stock Actual</field>
            <field name="res_model">inventory.speed.previsto.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,pivot,graph</field>
            <field name="context">{'search_default_internal_loc': 1}</field>
            <field name="view_id"></field>  <!-- force empty -->
            <field name="help">Informe de Inventario mas rápido</field>
        </record>

        <menuitem id="menu_inventory_speed_previsto_report" parent="stock.menu_warehouse_report" sequence="99" action="action_inventory_speed_previsto_report_all"/>

    </data>
</odoo>
