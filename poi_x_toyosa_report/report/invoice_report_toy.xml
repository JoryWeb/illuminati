<odoo>
<data>
  <report
    id="report_invoice_toyo"
    string="Factura de Venta de Vehiculos"
    model="account.invoice"
    report_type="qweb-pdf"
    file="poi_x_toyosa_report.invoice_report_toy"
    name="poi_x_toyosa_report.invoice_template_toy"
    menu='False'
  />

  <record id="paperformat_invoice_toy" model="report.paperformat">
    <field name="name">Factura Automoviles</field>
    <field name="default" eval="True"/>
    <field name="format">A4</field>
    <field name="page_height">0</field>
    <field name="page_width">0</field>
    <field name="orientation">Portrait</field>
    <field name="margin_top">82</field>
    <field name="margin_bottom">65</field>
    <field name="margin_left">5</field>
    <field name="margin_right">5</field>
    <field name="header_line" eval="False" />
    <field name="header_spacing">77</field>
    <field name="dpi">90</field>
  </record>
  <record id="account.account_invoices" model="ir.actions.report">
      <field name="paperformat_id" ref="poi_x_toyosa_report.paperformat_invoice_toy"/>
      <field name="attachment_use" eval="False"/>
  </record>
  <record id="report_invoice_toyo" model="ir.actions.report">
      <field name="paperformat_id" ref="poi_x_toyosa_report.paperformat_invoice_toy"/>
  </record>
</data>

<template id="invoice_template_toy">
