<odoo>
	<data>
		<record id="product_template_only_form_view_bona" model="ir.ui.view">
	        <field name="name">product.template.bonabel</field>
	        <field name="model">product.template</field>
	        <field name="inherit_id" ref="product.product_template_only_form_view"/>
	        <field name="arch" type="xml">
	            <xpath expr="//page[@name='sales']" position="after">
	                <page name="cat_page" string="Categorias">
	                    <group>
	                        <group>
	                        	<field name="name1"/>
			                    <field name="name2"/>
			                    <field name="name3"/>
			                    <field name="name4"/>
                    
	                        </group>
	                        <group>
	                        	<field name="name5"/>
			                    <field name="name6"/>
			                    <field name="name7"/>
			                    <field name="name8"/>
	                        </group>
	                    </group>
	                </page>
	            </xpath>
	        </field>
	    </record>

	    <record id="product_normal_form_view_bona" model="ir.ui.view">
	        <field name="name">product.product.bonabel</field>
	        <field name="model">product.product</field>
	        <field name="inherit_id" ref="product.product_normal_form_view"/>
	        <field name="arch" type="xml">
	           	          
	            <xpath expr="//page[@name='sales']" position="after">
	                <page name="cat_page" string="Categorias">
	                    <group>
	                        <group>
	                        	<field name="name1"/>
			                    <field name="name2"/>
			                    <field name="name3"/>
			                    <field name="name4"/>
                    
	                        </group>
	                        <group>
	                        	<field name="name5"/>
			                    <field name="name6"/>
			                    <field name="name7"/>
			                    <field name="name8"/>
	                        </group>
	                    </group>
	                </page>
	            </xpath>
	        </field>
	    </record>
	</data>
</odoo>