<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_picking_form_attachment">
        <field name="name">stock.picking.form.attachment</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" name="button_box">
                <button string="Adjuntos"
                        name="poi_attachments_name"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-paperclip"
                        context="{'xml_id':'poi_attachments_action'}"
                        help="Registrar Adjuntos en el albaran">
                </button>
            </div>
        </field>
    </record>
</odoo>