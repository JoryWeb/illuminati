<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="sale_order_attachment">
        <field name="name">sale.order.attachment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" name="button_box">
                <button string="Adjuntos"
                        name="poi_attachments_name"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-paperclip"
                        context="{'xml_id':'poi_attachments_action'}"
                        help="Registrar Adjuntos en el albaran">
                </button>
            </div>
        </field>
    </record>
</odoo>