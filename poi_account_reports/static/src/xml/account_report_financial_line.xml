<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="footNoteTextarea">
        <div class="mt32 mb32">
            <label t-att-for="'footnote' + footNoteSeqNum">
                <t t-esc="footNoteSeqNum"/>
            </label>
            <textarea t-att-name="'footnote' + footNoteSeqNum" rows='4' placeholder="Insert foot note here"></textarea>
            <button class="btn btn-primary">Save</button>
        </div>
    </t>
    <t t-name="supFootNoteSeqNum">
        <sup>
            <b class='o_account_reports_footnote_sup'>
                <a t-att-href="'#footnote'+footNoteSeqNum">
                    <t t-esc="footNoteSeqNum"/>
                </a>
            </b>
        </sup>
    </t>
    <t t-name="savedFootNote">
        <p class="footnote" t-att-id="'footnote'+num">
            <span class='text'>
                <t t-raw="num+'. '+note"/>
            </span>
            <span class='o_account_reports_footnote_icons'>
                <i class="fa fa-fw fa-pencil-square"></i>
                <i class="fa fa-fw fa-trash-o"></i>
            </span>
        </p>
    </t>
    <t t-name="nextActionDate">
        <span data-toggle='tooltip' data-placement='bottom' t-att-title='note'>
            <t t-esc='date'></t>
        </span>
        <i class="fa fa-fw fa-pencil-square"></i>
    </t>
    <t t-name="foldable">
        <span t-att-class="'o_account_reports_foldable ' + lineId + ' o_account_reports_caret_icon'">
            <i class="fa fa-fw fa-caret-down"></i>
        </span>
    </t>
    <t t-name="unfoldable">
        <span t-att-class="'o_account_reports_unfoldable ' + lineId + ' o_account_reports_caret_icon'">
            <i class="fa fa-fw fa-caret-right"></i>
        </span>
    </t>
    <t t-name="o_account_reports_pencil_icon">
        <span class="o_account_reports_pencil_icon">
            <i class="fa fa-fw fa-pencil-square"></i>
        </span>
    </t>
    <t t-name="trashAndPencilIcon">
        <span style="position: absolute; margin-left: 3px;">
            <i class="fa fa-fw fa-pencil-square"></i>
            <i class="fa fa-fw fa-trash-o"></i>
        </span>
    </t>
    <t t-name="addSummary">
        <div class="addSummary" role="alert">
            <span>
                <input type='text' class="o_form_input o_form_field" name='summary'
                       placeholder='Click to add an introductory explanation'/>
            </span>
        </div>
    </t>
    <t t-name="editSummary">
        <textarea name="summary" rows='4'>
            <t t-esc="summary"/>
        </textarea>
        <button class="btn btn-primary saveSummary">Save</button>
    </t>
    <t t-name="savedSummary">
        <i class="fa fa-fw fa-pencil o_account_reports_edit_summary_pencil"></i>
        <div class="o_account_reports_saved_summary" role="alert">
            <span>
                <t t-raw="summary"/>
            </span>
        </div>
    </t>
    <t t-name="fiscalYearAlert">
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&amp;times;</span>
                <span class="sr-only">Close</span>
            </button>
            <strong>Warning!</strong>
            No fiscal year was found. Using the current civil year.
        </div>
    </t>
    <t t-name="editContent">
        <t t-if="num > 0"><t t-esc="num"/>.
        </t>
        <textarea t-att-name="edit" rows='4'>
            <t t-esc="text"/>
        </textarea>
        <button class="btn btn-primary saveContent">Save</button>
    </t>
    <t t-name="report_financial_line">
        <t t-set="column" t-value="0"/>
        <t t-set="domainClass" t-value="'o_account_reports_domain_line_2'"/>
        <t t-if="!(_.isUndefined(l.level))">
            <t t-if="l.level == 1">
                <t t-set="domainClass" t-value="'o_account_reports_domain_line_1'"/>
            </t>
            <t t-if="l.level == 3">
                <t t-set="domainClass" t-value="'o_account_reports_domain_line_3'"/>
            </t>
        </t>
        <tr t-att-class="l.type" t-att-data-type="l.type" t-att-data-id="l.id">
            <td t-att-colspan="l.colspan != undefined ? l.colspan : 1">
                <t t-if="l.type != 'account_id' &amp; l.type != 'move_line_id' &amp; l.type != 'too_many'">
                    <span t-att-data-id="l.id" t-att-class="l.type + ' ' + domainClass">
                        <t t-esc="l.name"/>
                    </span>
                    <t t-if="l.footnotes[column] != undefined">
                        <t t-set='footNoteSeqNum' t-value="l.footnotes[column]"/>
                        <t t-call="supFootNoteSeqNum"/>
                    </t>
                </t>
                <a t-if="l.type == 'too_many'">
                    <span t-att-data-active-id="l.id" data-action-name="account.action_move_line_select"
                          t-att-class="'o_account_reports_web_action ' + domainClass">
                        <t t-esc="l.name"/>
                    </span>
                </a>
                <div class="dropdown" t-if="l.type == 'account_id' || l.type =='move_line_id'">
                    <a data-toggle="dropdown" href='#'>
                        <span t-att-data-id="l.id" t-att-class="l.type + ' ' + domainClass">
                            <t t-esc="l.name"></t>
                        </span>
                        <span class="caret"></span>
                    </a>
                    <t t-if="l.footnotes[column] != undefined">
                        <t t-set='footNoteSeqNum' t-value="l.footnotes[column]"/>
                        <t t-call="supFootNoteSeqNum"/>
                    </t>
                    <ul class="dropdown-menu o_account_reports_domain_dropdown" role="menu" aria-labelledby="dLabel">
                        <li role="presentation" t-if="l.type == 'account_id'">
                            <a role="menuitem" tabindex="-1" t-att-data-active-id="l.id"
                               data-action-name="poi_account_reports.action_account_general_ledger_force_account"
                               data-force-context='true' class="o_account_reports_web_action">General Ledger
                            </a>
                        </li>
                        <li role="presentation" t-if="l.type == 'move_line_id'">
                            <a role="menuitem" tabindex="-1" t-att-data-active-id="l.action[1]"
                               t-att-data-res-model="l.action[0]" t-att-data-view-id="l.action[3]"
                               class="o_account_reports_web_action">
                                <t t-esc="l.action[2]"/>
                            </a>
                        </li>
                        <li role="presentation" t-if="l.type == 'move_line_id' and l.action[0] != 'account.move'">
                            <a role="menuitem" tabindex="-1" t-att-data-active-id="l.move_id"
                               data-res-model="account.move" class="o_account_reports_web_action">View Journal Entry
                            </a>
                        </li>
                        <li role="presentation">
                            <a role="menuitem" tabindex="-1" class="o_account_reports_add-footnote">Annotate</a>
                        </li>
                    </ul>
                </div>
            </td>
            <t t-foreach="l.columns" t-as="c">
                <t t-set="column" t-value="column + 1"/>
                <td t-att-class="types[column - 1] == 'number' and  'text-right' or types[column - 1] == 'text' and  'text-left' or 'text-center'"
                    style="white-space: nowrap;">
                    <t t-if="typeof c == 'string' || typeof c == 'number'">
                        <span>
                            <t t-raw="c"/>
                            <t t-if="l.footnotes[column] != undefined">
                                <t t-set='footNoteSeqNum' t-value="l.footnotes[column]"/>
                                <t t-call="supFootNoteSeqNum"/>
                            </t>
                        </span>
                    </t>
                    <t t-if="typeof c != 'string' &amp; typeof c != 'number'">
                        <span t-att-style="c[1]">
                            <t t-raw="c[0]"/>
                            <t t-if="l.footnotes[column] != undefined">
                                <t t-set='footNoteSeqNum' t-value="l.footnotes[column]"/>
                                <t t-call="supFootNoteSeqNum"/>
                            </t>
                        </span>
                    </t>
                </td>
            </t>
        </tr>
    </t>
    <div t-name='paymentDateForm'>
        <form role="form">
            <label for="expectedDate">Expected Payment Date</label>
            <div class='o_account_reports_payment_date_picker'/>
            <label for='internalNote'>Note</label>
            <textarea name="internalNote" id="internalNote" rows='4' placeholder="Insert note here"></textarea>
            <input type='hidden' id='target_id' t-att-value='target_id'/>
        </form>
    </div>
    <div t-name='nextActionForm'>
        <div class='btn-group'>
            <a type="button" data-time='one-week'
               class="btn btn-default o_account_reports_followup_next_action_date_button">One week
            </a>
            <a type="button" data-time='two-weeks'
               class="btn btn-default o_account_reports_followup_next_action_date_button">Two weeks
            </a>
            <a type="button" data-time='one-month'
               class="btn btn-default o_account_reports_followup_next_action_date_button">One month
            </a>
            <a type="button" data-time='two-months'
               class="btn btn-default o_account_reports_followup_next_action_date_button">Two months
            </a>
        </div>
        <form role="form">
            <label for="nextActionDate">Don't follow-up before :</label>
            <div class='o_account_reports_next_action_date_picker'/>
            <label for='o_account_reports_next_action_note'>Note</label>
            <textarea name="o_account_reports_next_action_note" rows='4' class="o_account_reports_next_action_note"
                      placeholder="Insert note here"></textarea>
            <input type='hidden' id='target_id' t-att-value='target_id'/>
        </form>
    </div>
    <div t-name='footnoteForm'>
        <form role="form">
            <textarea name="note" rows='4' class="o_account_reports_footnote_note"
                      placeholder="Insert foot note here"></textarea>
            <input type='hidden' class='o_account_reports_footnote_type' t-att-value='type'/>
            <input type='hidden' class='o_account_reports_footnote_target_id' t-att-value='target_id'/>
            <input type='hidden' class='o_account_reports_footnote_column' t-att-value='column'/>
        </form>
    </div>
</templates>
